{
  "name": "vampire-survivors-enhanced",
  "version": "1.0.0",
  "description": "Enhanced Vampire Survivors browser game with performance optimizations and advanced features",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "format:check": "prettier --check 'src/**/*.js'",
    "serve": "python3 -m http.server 8000",
    "dev": "python3 -m http.server 8000",
    "check": "npm run lint && npm run format:check && npm run test"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "globals": {
      "__DEV__": true
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/debug/**/*.js"
    ],
    "coverageReporters": ["text", "html", "lcov"],
    "testPathIgnorePatterns": ["/node_modules/", "/dist/"]
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0"
  },
  "keywords": [
    "game",
    "javascript",
    "canvas",
    "vampire-survivors",
    "browser-game",
    "performance"
  ],
  "author": "Enhanced by Claude",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BareTread/vampire-survivors-enhanced.git"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
